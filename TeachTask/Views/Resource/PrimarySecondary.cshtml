@{
}
<h1>Resources</h1>

<table class="table table-sm">
    <thead>
        <tr>
            <th>ID</th>
            <th>Address</th>
            <th>ID</th>
            <th>Photographer</th>
            <th></th>
        </tr>
        @if (Model.PrimarySecondaryList.Count > 0)
        {
            foreach (var item in Model.PrimarySecondaryList)
            {
                <tr>
                    <td>@item.PrimaryId</td>
                    <td>@item.Address</td>
                    <td>@item.SecondaryId</td>
                    <td>@item.NamePhotographer</td>
                    <td>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5">Sorry no record found</td>
            </tr>
        }

    </thead>
</table>